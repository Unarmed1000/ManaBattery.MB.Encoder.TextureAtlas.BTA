<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GenerateDocumentationFile>False</GenerateDocumentationFile>
    <Company>Mana Battery ApS</Company>
    <Product>MB.Encoder.TextureAtlas</Product>
    <Authors>Mana Battery ApS</Authors>
    <Copyright>Copyright (c) Mana Battery ApS 2021</Copyright>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>BSD-3-Clause</PackageLicenseExpression>
    <PackageId>ManaBattery.MB.Encoder.TextureAtlas.BTA</PackageId>
    <Description>Basic texture atlas encoder.</Description>
    <Version>0.0.5</Version>
    <PackageProjectUrl>https://github.com/Unarmed1000/ManaBattery.MB.Encoder.TextureAtlas.BTA</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Unarmed1000/ManaBattery.MB.Encoder.TextureAtlas.BTA</RepositoryUrl>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.NetAnalyzers" Version="9.0.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="ManaBattery.MB.Base_Minimal" Version="0.0.4" />
    <PackageReference Include="ManaBattery.MB.Graphics2_Minimal" Version="0.0.3" />
  </ItemGroup>

</Project>
